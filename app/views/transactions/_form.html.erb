<div class="form-group">
  <label for="account_in">Da</label>
  <select class="form-control" id="account_in" name="account_in">
    <% @accounts[Account::IN].each do |account| -%>
    <option value="<%= account.id %>"  <%= account == @transaction.account_in ? "selected='selected'" : "" %>><%= account.label %></option>
    <% end -%>
  </select>
</div>
<div class="form-group">
  <label for="account_out">A</label>
  <select class="form-control" id="account_out" name="account_out">
    <% @accounts[Account::OUT].each do |account| -%>
    <option value="<%= account.id %>"  <%= account == @transaction.account_out ? "selected='selected'" : "" %>><%= account.label %></option>
    <% end -%>
  </select>
</div>
<div class="form-group">
  <label for="description">Descrizione</label>
  <input type="text" class="form-control" id="description" name="description" value="<%= @transaction.description %>">
</div>
<div class="form-group">
  <label for="amount">Ammontare</label>
  <input type="text" class="form-control" id="amount" name="amount" value="<%= @transaction.amount %>">
</div>
<input type='hidden' class="form-control" name="dt" id="hidden_dt" data-current="<%= @transaction.dt %>" />
<div style="overflow:hidden;">
  <div class="form-group">
    <label for="dt">Data/Ora</label>
    <div class="row">
      <div class="col-md-8">
        <div id="dt">
        </div>
      </div>
    </div>
  </div>
</div>
<button type="submit" class="btn btn-default">Salva</button>
 
