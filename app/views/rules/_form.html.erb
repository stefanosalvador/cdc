<div class="form-group">
  <label for="r_type">Tipo di regola</label>
  <select class="form-control" id="r_type" name="r_type">
    <option value=""  <%= @rule[:r_type].nil? ? "selected='selected'" : "" %>>-- Scegli --</option>
    <% [Import::REGEXP_RULE, Import::STRING_RULE, Import::LUCKY_RULE ].each do |r_type| -%>
    <option value="<%= r_type %>"  <%= @rule[:r_type] ==  r_type ? "selected='selected'" : "" %>><%= r_type %></option>
    <% end -%>
  </select>
</div>
<div class="form-group">
  <label for="token">Token</label>
  <input type="text" class="form-control" id="token" name="token" value="<%= @rule[:token] %>">
</div>
<div class="form-group">
  <label for="description">Descrizione</label>
  <input type="text" class="form-control" id="description" name="description" value="<%= @rule[:description] %>">
</div>
<div class="form-group">
  <label for="account_in">Da</label>
  <select class="form-control" id="account_from" name="account_from">
    <option value=""  <%=  @rule[:account_from].nil? ? "selected='selected'" : "" %>>-- Scegli --</option>
    <% @accounts.each do |account| -%>
    <option value="<%= account.id %>"  <%= account.id == @rule[:account_from] ? "selected='selected'" : "" %>><%= account.label %></option>
    <% end -%>
  </select>
</div>
<div class="form-group">
  <label for="account_out">A</label>
  <select class="form-control" id="account_to" name="account_to">
    <option value=""  <%=  @rule[:account_to].nil? ? "selected='selected'" : "" %>>-- Scegli --</option>
    <% @accounts.each do |account| -%>
    <option value="<%= account.id %>"  <%= account.id == @rule[:account_to] ? "selected='selected'" : "" %>><%= account.label %></option>
    <% end -%>
  </select>
</div>
<button type="submit" class="btn btn-default">Salva</button>
 
