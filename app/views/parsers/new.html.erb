<div class="main_container page import" id="new_parser">
  <div class="section section_even">
    <div class="container">
      <h1 class="title">Importa transazioni da file</h1>
      <%= form_tag(parsers_path, method: :post, multipart: true) do -%>
        <div class="form-group">
          <label for="r_type">Regola di import</label>
          <select class="form-control" id="import" name="import">
            <option value="">-- Scegli --</option>
            <% @imports.each do |import| %>
            <option value="<%= import.id %>"><%= import.label %></option>
            <% end -%>
          </select>
        </div>
        <div class="form-group">
          <label for="dt_import">Importa solo transazioni dopo</label>
          <input type="text" class="form-control" id="dt_import" name="dt_import" value="1/1/2017">
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" id="check_duplicates" name="check_duplicates" checked='checked'> Controlla duplicati
          </label>
        </div>
        <div class="form-group">
          <label for="exampleInputFile">File da imporare</label>
          <input type="file" id="file" name="file">
        </div>
        <button type="submit" class="btn btn-default">Salva</button>
      <% end %>
    </div>
  </div>
</div>
 
 
 
