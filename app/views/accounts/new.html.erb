<div class="main_container page" id="new_account">
  <div class="section section_even">
    <div class="container">
      <h1 class="title">Nuovo conto</h1>
        <%= form_tag(accounts_path, method: :post) -%>
          <div class="form-group">
            <label for="label">Etichetta</label>
            <input type="text" class="form-control" id="label" name="label">
          </div>
          <div class="form-group">
            <label for="direction">Tipo</label>
            <select class="form-control" id="direction" name="direction">
              <option value="<%= Account::OUT %>"><%= t Account::OUT %></option>
              <option value="<%= Account::IN %>"><%= t Account::IN %></option>
            </select>
          </div>
          <label>Tags</label>
          <% Tag.by_name.each do |tag|%>
          <label class="checkbox-inline">
            <input type="checkbox" name="tags[]" value="<%= tag.id%>"> <%= tag.name %>
          </label>
          <% end %>
          <div class="form-group">
            <label for="new_tags">Nuovi tag</label>
            <input type="text" class="form-control" id="new_tags" name="new_tags">
          </div>
          <button type="submit" class="btn btn-default">Salva</button>
        </form>
    </div>
  </div>
</div>
